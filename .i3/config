## Volume control

# Path to volume control, without trailing slash
set $volumepath ~/.i3/i3-volume/volume

# Command for the status line
#   ie: i3blocks, i3status
set $statuscmd i3blocks

# Signal used to update the status line
#   i3blocks uses SIGRTMIN+10 by default
#   i3status uses SIGUSR1 by default
set $statussig SIGRTMIN+10

# Amount to increase/decrease volume as a percentage
set $volumestep 5

# pulseaudio-utils settings
#
# Symbolic name for sink (numeric index not supported)
#   Recommended: comment out this setting and omit the -s option to use default sink
#   List sink names: pacmd list-sinks | awk -F "[<>]" '/^\s+name: <.*>/{print $2}'
#set $sinkname alsa_output.pci-0000_00_1b.0.analog-stereo

# Using pulseaudio-utils (append "-s $sinkname" without quotes to override default sink)
bindsym XF86AudioRaiseVolume exec $volumepath -np -i $volumestep -t $statuscmd -u $statussig
bindsym XF86AudioLowerVolume exec $volumepath -np -d $volumestep -t $statuscmd -u $statussig
bindsym XF86AudioMute        exec $volumepath -mn -t $statuscmd -u $statussig

# Set screenshot commands
# - selection capture to clipboard
bindsym $mod+Shift+s exec "~/.i3/scripts/screenshot selection"
# - fullscreen to clipboard
bindsym $mod+Shift+f exec "~/.i3/scripts/screenshot fullscreen"
# - selection capture to file
bindsym $mod+Shift+Control+s exec "~/.i3/scripts/screenshot selection-file"
# - fullscreen to file
bindsym $mod+Shift+Control+f exec "~/.i3/scripts/screenshot fullscreen-file"

# Disable keyboard  beep
exec --no-startup-id "xset b off"

# Set keyboard layout to us intl with dead keys and altgr
exec --no-startup-id "setxkbmap -layout us -variant intl"

# Configure natural scrolling for the synaptics touchpad
exec --no-startup-id "~/.i3/scripts/scrolling"

# Enable natural horizontal scrolling
exec --no-startup-id "~/.i3/scripts/synaptics HorizTwoFingerScroll on"
exec --no-startup-id "~/.i3/scripts/synaptics HorizScrollDelta reverse"

# Enabling keychain support
exec --no-startup-id "dbus-update-activation-environment --systemd DISPLAY"
exec --no-startup-id "/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh && export SSH_AUTH_SOCK"

# Enable gnome settings daemon for managing the appearance of GTK-based apps
# This doesn't exist anymore.
# exec "/usr/bin/gnome-settings-daemon"
exec --no-startup-id "/usr/libexec/gsd-xsettings"

# Add bluetooth management support
exec --no-startup-id "/usr/bin/blueman-applet"

# Add network management support
exec --no-startup-id "/usr/bin/nm-applet"

# Set background to desktop
# Do this by linking an image to ~/.i3background
exec --no-startup-id "feh --bg-scale ~/.i3background"

# Enable xautolock to use fancy screen locker
exec --no-startup-id "/usr/bin/xautolock -time 10 -locker ~/.i3/i3lock-fancy/lock"

# Also enable daemon that locks the screen of the lid is closed
exec --no-startup-id "~/.i3/scripts/acpid-event-handler"

# Change keyboard repeat rate and delay
# Delay: 260ms / Repeat rate: 30
exec --no-startup-id "xset r rate 260 30"

exec i3
